generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password  String?
  
  socialAccounts SocialAccount[]
  contents       Content[]
  emailMetadata  EmailMetadata[]
  media          Media[]
  refreshTokens  RefreshToken[]
  
  // Monetization relations
  createdTiers        SubscriptionTier[] @relation("CreatorTiers")
  subscriptions       Subscription[]     @relation("UserSubscriptions")
  creatorSubscriptions Subscription[]    @relation("CreatorSubscriptions")
  payouts             Payout[]

  // Network Effects (Phase 2.1)
  connectionsAsA     Connection[] @relation("ConnectionsAsA")
  connectionsAsB     Connection[] @relation("ConnectionsAsB")
  tagsMade           EventTag[]   @relation("Tagger")
  tagsReceived       EventTag[]   @relation("Tagged")
  memoryCompleteness Float        @default(0) // 0-100 score

  @@index([createdAt])
  @@index([email, createdAt])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@index([revoked])
}

model SocialAccount {
  id           String    @id @default(uuid())
  userId       String
  provider     String    // "INSTAGRAM", "TWITTER", "FACEBOOK", "LINKEDIN"
  providerId   String
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([userId])
  @@index([provider])
  @@index([providerId])
  @@index([expiresAt])
}

model Content {
  id              String   @id @default(uuid())
  userId          String
  provider        String   // "INSTAGRAM", "TWITTER", "FACEBOOK", "LINKEDIN"
  platformId      String
  contentType     String
  text            String?
  mediaUrls       String?
  timestamp       DateTime
  engagementLikes Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, platformId])
  @@index([userId])
  @@index([timestamp])
}

model EmailMetadata {
  id              String   @id @default(uuid())
  userId          String
  provider        String   // "GMAIL", "OUTLOOK"
  emailId         String   // Unique email ID from provider
  subject         String?
  sender          String
  recipient       String
  timestamp       DateTime
  hasAttachments  Boolean  @default(false)
  category        String?  // "flight", "hotel", "receipt", "personal", etc.
  extractedData   String?  // JSON string of extracted metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, emailId])
  @@index([userId])
  @@index([timestamp])
  @@index([category])
}

model Media {
  id              String   @id @default(uuid())
  userId          String
  contentId       String?  // Link to Content model if from social media
  provider        String   // "INSTAGRAM", "TWITTER", "FACEBOOK", etc.
  originalUrl     String
  localPath       String?  // Path to downloaded file
  fileHash        String   @unique // SHA-256 hash for deduplication
  fileSize        Int      // Size in bytes
  mimeType        String   // image/jpeg, video/mp4, etc.
  width           Int?
  height          Int?
  duration        Int?     // For videos, in seconds
  
  // EXIF Metadata
  latitude        Float?
  longitude       Float?
  takenAt         DateTime?
  cameraModel     String?
  
  // Processing
  isProcessed     Boolean  @default(false)
  isOptimized     Boolean  @default(false)
  optimizedPath   String?
  version         Int      @default(1)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([fileHash])
  @@index([provider])
  @@index([takenAt])
  @@index([userId, createdAt])
}

// ============================================
// MONETIZATION MODELS
// ============================================

model SubscriptionTier {
  id          String   @id @default(uuid())
  creatorId   String
  creator     User     @relation("CreatorTiers", fields: [creatorId], references: [id], onDelete: Cascade)
  
  name        String   // "Free", "Bronze", "Gold"
  price       Float    // Monthly price in USD
  currency    String   @default("USD")
  
  features    String   // JSON string of feature descriptions
  isActive    Boolean  @default(true)
  
  subscriptions Subscription[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([creatorId])
  @@index([isActive])
}

model Subscription {
  id              String   @id @default(uuid())
  subscriberId    String
  subscriber      User     @relation("UserSubscriptions", fields: [subscriberId], references: [id], onDelete: Cascade)
  creatorId       String
  creator         User     @relation("CreatorSubscriptions", fields: [creatorId], references: [id], onDelete: Cascade)
  tierId          String
  tier            SubscriptionTier @relation(fields: [tierId], references: [id])
  
  status          String   // "active", "canceled", "past_due", "paused"
  
  // Payment provider details
  provider        String   // "paypal" or "stripe"
  providerSubId   String   // External subscription ID
  
  // Billing
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean @default(false)
  
  // Metadata
  metadata        String?  // JSON string
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  payments        Payment[]
  
  @@unique([subscriberId, creatorId])
  @@index([creatorId])
  @@index([status])
  @@index([tierId])
}

model Payment {
  id              String   @id @default(uuid())
  subscriptionId  String
  subscription    Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  amount          Float
  currency        String   @default("USD")
  
  provider        String   // "paypal" or "stripe"
  providerPaymentId String @unique
  
  status          String   // "succeeded", "failed", "pending", "refunded"
  
  // Revenue split (40% creator / 60% platform)
  creatorAmount   Float    // 40%
  platformFee     Float    // 60%
  
  // Payout tracking
  payoutId        String?
  payout          Payout?  @relation(fields: [payoutId], references: [id])
  
  metadata        String?  // JSON string
  
  createdAt       DateTime @default(now())
  
  @@index([subscriptionId])
  @@index([status])
  @@index([createdAt])
  @@index([payoutId])
}

model Payout {
  id          String   @id @default(uuid())
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  
  amount      Float
  currency    String   @default("USD")
  
  status      String   // "pending", "processing", "paid", "failed"
  
  // Bank details (encrypted)
  bankAccountLast4 String?
  
  // Provider details
  provider    String   // "paypal" or "stripe_connect"
  providerPayoutId String?
  
  payments    Payment[]
  
  paidAt      DateTime?
  createdAt   DateTime @default(now())
  
  @@index([creatorId])
  @@index([status])
  @@index([createdAt])
}

model ContentAccess {
  id          String   @id @default(uuid())
  chapterId   String   @unique // Reference to biography chapter
  creatorId   String
  
  accessLevel String   // "public", "private", "bronze", "gold"
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([creatorId])
  @@index([accessLevel])
}

// ============================================
// NETWORK EFFECTS MODELS (Phase 2.1)
// ============================================

model Connection {
  id              String   @id @default(uuid())
  userAId         String
  userBId         String
  userA           User     @relation("ConnectionsAsA", fields: [userAId], references: [id], onDelete: Cascade)
  userB           User     @relation("ConnectionsAsB", fields: [userBId], references: [id], onDelete: Cascade)
  
  strengthScore   Float    @default(0) // 0-100 based on shared experiences
  relationshipType String? // friend, family, colleague, romantic
  
  // Relationship timeline
  startDate       DateTime?
  endDate         DateTime?
  timeline        String?  // JSON: [{ date, event, strength }]
  
  // Metadata
  sharedEvents    Int      @default(0) // Count of shared BiographyEvents
  mutualFriends   Int      @default(0)
  lastInteraction DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userAId, userBId])
  @@index([userAId])
  @@index([userBId])
  @@index([strengthScore])
}

model MemoryCollision {
  id          String   @id @default(uuid())
  
  // Event details
  title       String
  description String?
  location    String?
  timestamp   DateTime
  
  // Participants
  users       String   // JSON array of user IDs
  
  // AI Analysis
  confidence  Float    // 0-100 AI confidence in match
  verified    Boolean  @default(false)
  perspectives String? // JSON: { userId: { text, photos, mood } }
  
  // Collision source
  detectedBy  String   // temporal, spatial, mutual_mention
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([timestamp])
  @@index([verified])
}

model EventTag {
  id            String   @id @default(uuid())
  
  // Event reference
  eventId       String
  eventTitle    String
  eventDate     DateTime
  
  // Tag relationship
  taggerId      String
  tagger        User     @relation("Tagger", fields: [taggerId], references: [id], onDelete: Cascade)
  taggedUserId  String
  taggedUser    User     @relation("Tagged", fields: [taggedUserId], references: [id], onDelete: Cascade)
  
  // Tag data
  status        String   @default("pending") // pending, accepted, declined
  message       String?  // "You were there!"
  taggedUserPerspective String? // Their version of the event
  
  // Verification
  verifiedAt    DateTime?
  verificationData String? // JSON: { photos: [], details: "" }
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([taggedUserId, status])
  @@index([taggerId])
  @@index([status])
}

model StoryMerger {
  id              String   @id @default(uuid())
  
  // Event details
  eventId         String
  eventTitle      String
  eventDate       DateTime
  
  // Participants
  participants    String   // JSON array of user IDs
  
  // Content
  mergedContent   String   // JSON: { userId: narrative, photos, mood }
  
  // Monetization
  isPublished     Boolean  @default(false)
  price           Float?   // If selling merged chapter
  revenueShare    String?  // JSON: { userId: percentage }
  salesCount      Int      @default(0)
  
  // Approval
  approvalStatus  String   // JSON: { userId: "pending"/"approved"/"declined" }
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  publishedAt     DateTime?
  
  @@index([isPublished])
  @@index([eventDate])
}
